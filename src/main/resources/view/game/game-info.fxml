<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Text?>
<fx:root type="javafx.scene.layout.VBox"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="pl.edu.agh.ki.to.theoffice.components.game.GameInfoComponent"
         prefHeight="600.0" prefWidth="200.0"
         style="-fx-border-color: black;">

    <TilePane style="-fx-border-color: black;">
        <ImageView fitHeight="60" fitWidth="60">
            <Image url="@/icons/bomb.png"/>
        </ImageView>
        <Text fx:id="bombCount" style="-fx-font: 24 arial; ">12</Text>
    </TilePane>
    <TilePane style="-fx-border-color: black;">
        <ImageView fitHeight="60" fitWidth="60">
            <Image url="@/icons/teleport.png"/>
        </ImageView>
        <Text fx:id="teleportCount" style="-fx-font: 24 arial;">2</Text>
    </TilePane>

</fx:root>
